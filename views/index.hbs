<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Test</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <!-- Global site tag (gtag.js) - Google Analytics -->

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-50770211-4"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-50770211-4');
    </script>

  </head>
  <body>

    <nav>
      <div class="inner">
        <img src="/images/sunglasses_trimmed.png" height=12px>
        |
        <a href="/"><strong>Optimistic Weather</strong></a>
        |
        <a href="/about">About</a>
      </div>
    </nav>

    <div id="header">
        <fieldset>
          <form id="searchForm" action="/" method="post">
            <input name="address" type="text" placeholder="Enter an Address" required>
            <input type="image" class="submitButton" src="/images/tilda_icons_2web_magnifier.svg" alt="Submit Form">
          </form>
        </fieldset>
    </div>

    <div id="currentDetailsWrapper">
      <div id="currentDetails">
        {{#if address}}
        {{address}}
        {{else}}
          {{error}}
        {{/if}}
      </div>
    </div>

    <div class="container">
      <div class="forecast">
        {{#if firstResult}}
        <span class="currently">
          <span class="weatherIcon">
            <img src={{firstResult.icon}} alt="weather icon">
          </span>
          <span class="description swap">
            <span class="summaryWeather">Top Result</span>
            <span>{{firstResult.temperature}}&deg;C {{firstResult.summary}}</span>
            <span class="summaryAddress">
              {{firstResult.source}}
            </span>
          </span>
          {{else}}
            {{error}}
          </span>
        {{/if}}
        </div>
      </div>

      <div class="container">
        <div class="forecast">
          {{#if secondResult}}
          <span class="currently">
            <span class="weatherIcon">
              <img src={{secondResult.icon}} alt="weather icon">
            </span>
            <span class="description swap">
              <span class="summaryWeather">Second Result</span>
              <span>{{secondResult.temperature}}&deg;C {{secondResult.summary}}</span>
              <span class="summaryAddress">
                {{secondResult.source}}
              </span>
            </span>
            {{else}}
              {{error}}
            </span>
          {{/if}}
          </div>
        </div>


  </body>
</html>
